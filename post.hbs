{{!< default}}
{{#post}}
    <main class="content" role="main">
        <article class="{{post_class}}">
            <div class="row">
                <div class="col-md-8 col-lg-8 col-md-offset-2  col-lg-offset-2">
                    <header class="post-header">
                        <h1 class="post-title text-center" id="entry-title">{{title}}</h1>
                        <section class="post-meta">
                            <time class="post-date" datetime="{{date format='YYYY-MM-DD'}}"></time>
                        </section>
                    </header>
                    <div class="entry">
                        {{content}}
                    </div>
                </div>
            </div>
        </article>
    </main>
{{/post}}
